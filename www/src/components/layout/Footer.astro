---
import type { Locale } from "@/utils/get-locale";

import Master from "@/layouts/Master.astro";

import {
  localizedToS,
  localizedSourceCode,
} from "@/i18n/layouts/FooterContent.i18n";

import ToSIcon from "@/assets/ToSIcon.astro";
import GitHubIcon from "@/assets/GitHubIcon.astro";

interface Props {
  locale: keyof Locale;
}

const { locale } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="mt-auto w-full">
  <div
    class="flex justify-center border-t border-solid border-bwhite dark:border-bblack py-6"
  >
    <div
      class="grid xl:grid-cols-3 place-items-center pb-6 select-none max-xl:gap-y-3"
    >
      <p class="text-pretendard max-lg:text-sm font-semibold">
        Jorge Fernando √Ålava&nbsp&copy;&nbsp{currentYear}
      </p>
      <div
        class="grid gap-y-3 pl-3 py-3 border-l border-solid border-bwhite dark:border-bblack place-items-start"
      >
        <a href="/tos" class="hover:underline flex justify-center items-center">
          <ToSIcon />
          <p class="text-pretendard pl-2 max-lg:text-sm">
            {localizedToS[locale]}
          </p>
        </a>
        <a
          href="https://github.com/jfalava/link-shortener?tab=readme-ov-file"
          class="hover:underline flex justify-center items-center"
          target="_self"
          rel="noopener noreferer"
        >
          <GitHubIcon />
          <p class="text-pretendard pl-2 max-lg:text-sm">
            {localizedSourceCode[locale]}
          </p>
        </a>
      </div>
      <div
        class="grid gap-y-3 pl-3 py-3 xl:border-l xl:border-solid xl:border-bwhite xl:dark:border-bblack place-items-start"
      >
        <a href="https://astro.build"
          ><img
            src="https://astro.badg.es/v2/built-with-astro/small.svg"
            alt="Built with Astro"
            width="192"
            height="32"
          /></a
        >
      </div>
    </div>
  </div>
</footer>
